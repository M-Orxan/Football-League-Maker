@model League
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Create a new league</h5>

            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label" for="basic-default-fullname">Name</label>
                        <input asp-for="Name" type="text" class="form-control" id="basic-default-fullname" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label"> Select teams</label>
                        <select multiple class="form-select" name="teamIds[]">
                            @foreach (Team team in ViewBag.Teams)
                            {
                                <option value="@team.Id">@team.Name</option>
                            }
                        </select>
                    </div>





                </form>
            </div>

        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="Index" type="submit" class="btn btn-secondary">Cancel</a>
    </div>

</div>

