@model Team
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Create a new team</h5>

            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label" for="basic-default-fullname">Name</label>
                        <input asp-for="Name" type="text" class="form-control" id="basic-default-fullname" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="Index" type="submit" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}